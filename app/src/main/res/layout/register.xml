
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.accenture.sanjeevi.babu.madhu.mumbai_es.Reg"
        android:background="#ffffff"
        android:id="@+id/rela">





        <TextView android:text="Registration" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvREG"
            android:textSize="30dp"
            android:textStyle="italic"
            android:textColor="#7f5217"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />


        <Spinner
            android:id="@+id/spinner"
            android:drawSelectorOnTop="true"
            android:prompt="@string/type1"
            android:entries="@array/user_arrays"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:layout_above="@+id/button2"
            android:layout_alignRight="@+id/button2"
            android:layout_alignEnd="@+id/button2"
            android:layout_marginBottom="16dp"/>


        <EditText
            android:layout_marginBottom="15.0dip"
            android:background="@drawable/edit_text_state"
            android:layout_width="311dp"
            android:layout_height="45dp"
            android:id="@+id/etFN"
            android:hint="Full Name*"
            android:focusable="true"
            android:textSize="19dp"
            android:layout_marginTop="155dp"
            android:ems="100"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="#000000"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:maxLength="20"/>



        <EditText
            android:layout_marginBottom="15.0dip"
            android:background="@drawable/edit_text_state"
            android:focusable="true"
            android:textSize="18dp"
            android:layout_marginTop="-5dp"
            android:layout_width="311dp"
            android:layout_height="45dp"
            android:inputType="textPassword" android:maxLength="20"
            android:ems="100"
            android:id="@+id/etP"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="#000000"
            android:hint="Password*"
            android:layout_below="@+id/etFN"/>


        <EditText
            android:layout_marginBottom="15.0dip"
            android:background="@drawable/edit_text_state"
            android:focusable="true"
            android:textSize="18dp"
            android:layout_marginTop="-5dp"
            android:layout_width="311dp"
            android:layout_height="45dp"
            android:inputType="textPassword"
            android:ems="100"
            android:id="@+id/etCP"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="#000000"
            android:hint="Confirm Password*"
            android:layout_below="@+id/etP"
            android:maxLength="20"/>

        <EditText
            android:layout_marginBottom="15.0dip"
            android:background="@drawable/edit_text_state"
            android:layout_width="311dp"
            android:layout_height="45dp"
            android:id="@+id/etEM"
            android:hint="E-mail ID"
            android:focusable="true"
            android:textSize="19dp"
            android:layout_marginTop="-5dp"
            android:ems="100"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="#000000"
            android:layout_below="@+id/etCP"
            android:maxLength="50"/>

        <EditText
            android:layout_marginBottom="5.0dip"
            android:background="@drawable/edit_text_state"
            android:layout_width="311dp"
            android:layout_height="45dp"
            android:id="@+id/etPH"
            android:hint="Phone number*"
            android:inputType="phone"
            android:focusable="true"
            android:textSize="19dp"
            android:layout_marginTop="-5dp"
            android:ems="100"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="#000000"
            android:layout_below="@+id/etEM"
            android:digits="1234567890"
            android:maxLength="10"/>

        <Button
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:id="@+id/btREGT"
            android:layout_below="@+id/etPH"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"

            android:textColor="#fff"
            android:background="@drawable/rounded_corner"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/button2"
            android:layout_alignTop="@+id/etFN"
            android:layout_toRightOf="@+id/etFN"
            android:layout_toEndOf="@+id/etFN" />

    </RelativeLayout>

