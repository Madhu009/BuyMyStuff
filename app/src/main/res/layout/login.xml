<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.madhu.buymystuff.MainActivity">

    <Spinner
        android:id="@+id/spinner"
        android:drawSelectorOnTop="true"
        android:prompt="@string/type1"
        android:entries="@array/user_arrays"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="29dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


<EditText
        android:layout_width="311dp"
        android:layout_height="45dp"
        android:id="@+id/editText"
        android:hint="User Name"
        android:focusable="true"
        android:textSize="19dp"
        android:ems="100"
        android:textColor="#000000"
        android:background="@drawable/edit_text_state"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
    android:layout_below="@+id/textView2"
    android:layout_marginTop="103dp"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignRight="@+id/editText2"
    android:layout_alignEnd="@+id/editText2"
    />


    <!--

               android:background="@drawable/edit_text_state"
               android:layout_marginLeft="10.0dip"
               android:layout_marginRight="10.0dip"
               android:layout_marginBottom="5.0dip"/>
   -->


    <EditText
        android:background="@drawable/edit_text_state"
        android:focusable="true"
        android:textSize="18dp"
        android:layout_marginTop="29dp"
        android:layout_width="311dp"
        android:layout_height="45dp"
        android:inputType="textPassword"
        android:ems="100"
        android:id="@+id/editText2"
        android:textColor="#000000"
        android:hint="Password"
        android:layout_below="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btLogin"
        android:layout_alignEnd="@+id/btLogin" />

    <Button
        android:textColor="#fff"
        android:background="@drawable/rounded_corner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/btLogin"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/editText2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/spinner"
        android:layout_alignEnd="@+id/spinner" />





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Login"
        android:textSize="25dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/progressBar1"
        android:layout_centerHorizontal="true" />
    <ProgressBar
        android:id="@+id/progressBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Application Name "
        android:id="@+id/textView"
        android:layout_alignTop="@+id/progressBar1"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
